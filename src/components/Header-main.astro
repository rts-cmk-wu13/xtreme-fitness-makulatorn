<style>
    .subscribe-con {
        display: inline-block; 
        border: 2px solid gray;
        border-radius: 40px;
        padding: 5px;
        margin-top: 5rem;
    }

    .subscribe-con a {
        display: flex !important;
        flex-direction: row;
        align-items: center;
        text-decoration: none;
        gap: 8px;
    }

    .subscribe-con p {
        margin: 0;
        display: inline;
        white-space: nowrap;
    }
    .title-div{
        padding: 17rem 7rem 7rem 7rem;
    }
    .title{
        font-size: 55px;
    }
    .subtitle{
        font-size: 130px;
    }
    .desc{
        font-size: 30px;
    }
    .title, .subtitle, .desc{
        color: white;
    }
    header {
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-color: #333; 
        background-image: url('../assets/headers/mainHeader.jpg');
        width: 100%;
        min-height: 100%;
        position: relative;
    }
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        position: relative;
        z-index: 100;
    }
    ul{
        display: flex;
        gap: 3rem;
        padding: 1rem;
        max-width: 100%;
    }
    a {
        color: white;
        font-size: 1.2rem;
        padding: 0.5rem;
        text-decoration: none;
        transition: color 0.3s;
    }
    a:hover {
        color: var(--orange);
    }

    .menu-toggle {
        display: none;
        flex-direction: column;
        gap: 6px;
        background: none;
        border: none;
        cursor: pointer;
        padding: 10px;
    }

    .menu-toggle span {
        display: block;
        width: 30px;
        height: 3px;
        background-color: white;
        transition: 0.3s;
    }
    .menu-toggle.active span:nth-child(2) {
        opacity: 0;
    }
    .menu-toggle.active span:nth-child(1) {
        transform: translateY(9px) rotate(45deg);
    }
    .menu-toggle.active span:nth-child(3) {
        transform: translateY(-9px) rotate(-45deg);
    }
    @media screen and (max-width: 1200px){
        .title, .subtitle, h1, h2{
            font-size: 35pt;
        }

        .menu-toggle, .logo {
            display: flex;
            z-index: 9999;
        }

        ul {
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw; 
            height: 100vh;
            background-color: #111;
            z-index: 99;
            gap: 2rem;
            padding: 0;
        }
        ul.active {
            display: flex;
        }

        li {
            border-bottom: 1px solid #333;
            width: 100%;
        }

        a {
            display: block;
            padding: 1.5rem;
        }
    }
</style>

<script>
import { logOut } from '../lib/api';
import * as R from 'ramda';

    const initAuth = () => {
        const authLink = document.getElementById('auth-link') as HTMLAnchorElement;
        if (!authLink) return;
    
        const token = sessionStorage.getItem('auth_token');
        
        const isLoggedIn = R.allPass([
            R.complement(R.isNil),
            R.complement(R.isEmpty)
        ])(token);

        if (isLoggedIn) {
            authLink.textContent = 'LOG OUT';
            authLink.href = '#';
            authLink.addEventListener('click', (e) => {
                e.preventDefault();
                logOut();
            })
        }
    }

    const mobileMenu = () => {
        const toggle = document.querySelector('.menu-toggle');
        const menu = document.getElementById('nav-menu');

        const scroll = (isActive: boolean) => 
            document.body.style.overflow = isActive ? 'hidden' : '';

        
        toggle?.addEventListener('click', () => {
            const isActive = menu?.classList.toggle('active') ?? false;
            toggle.classList.toggle('active');

            scroll(isActive)
        });

        menu?.querySelectorAll('a').forEach(link => 
            link.addEventListener('click', () => {
                menu.classList.remove('active');
                toggle?.classList.remove('active');
                scroll(false);
            })
        )
    }

    initAuth();
    mobileMenu();
</script>