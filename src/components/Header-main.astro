<style>
    .subscribe-con {
        display: inline-block; 
        border: 2px solid gray;
        border-radius: 40px;
        padding: 5px;
        margin-top: 5rem;
    }

    .subscribe-con a {
        display: flex !important;
        flex-direction: row;
        align-items: center;
        text-decoration: none;
        gap: 8px;
    }

    .subscribe-con p {
        margin: 0;
        display: inline;
        white-space: nowrap;
    }
    .title-div{
        padding: 17rem 7rem 7rem 7rem;
    }
    .title{
        font-size: 55px;
    }
    .subtitle{
        font-size: 130px;
    }
    .desc{
        font-size: 30px;
    }
    .title, .subtitle, .desc{
        color: white;
    }
    header {
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-color: #333; 
        background-image: url('../assets/headers/mainHeader.jpg');
        width: 100%;
        min-height: 100%;
    }
    nav {
        display: flex;
        justify-content: flex-end;
        padding: 20px;
        justify-content: space-between;
    }
    ul{
        display: flex;
        gap: 3rem;
        padding: 1rem;
    }
    a {
        color: white;
        font-size: 1.2rem;
        padding: 0.5rem;
        &:hover{
            color: var(--orange);
        }
    }
</style>

<script>
import { logOut } from '../lib/api';
import * as R from 'ramda';

    const initAuth = () => {
        const authLink = document.getElementById('auth-link') as HTMLAnchorElement;
        if (!authLink) return;
    
        const token = sessionStorage.getItem('auth_token');
        
        const isLoggedIn = R.allPass([
            R.complement(R.isNil),
            R.complement(R.isEmpty)
        ])(token);

        if (isLoggedIn) {
            authLink.textContent = 'LOG OUT';
            authLink.href = '#';
            authLink.addEventListener('click', (e) => {
                e.preventDefault();
                logOut();
            })
        }
    }
    initAuth();
</script>